<%- include('partials/header') %>

<form class="" action="/balanceenquiry" method="post">
  <h2 class="mb-3" style="margin:30px 0 0 45px;">Enter the username which you have entered while filling account form to see your account</h2>
  <form class="needs-validation" style="margin-bottom: 200px;" novalidate>
    <div class="row g-3">
      <div class="col-sm-4 bae-acc">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" name="username" id="username" placeholder="" value="" required>
        <div class="invalid-feedback">
          Valid user name is required.
        </div>
        <button type="submit" class="btn btn-success" style="margin-top: 20px;">Submit</button>

        <p style="margin: 30px 30px;" >Or</p>

        <h5>Don't have bank account <a href="/create_account">Create account</a></h5>
      </div>


</form>

