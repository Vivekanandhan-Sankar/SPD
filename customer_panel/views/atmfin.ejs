<%- include('partials/header') %>

<div class="be">
  <% if(account.length === 0){ %>
  <div class="no-account">
    <h1>Oops!! You are not applied for any ATM card yet!..<i class="fas fa-exclamation-circle"></i></h1>
    <h2>Apply for ATM <i class="fas fa-grin-beam"> </i> <i class="fas fa-hand-point-down"></i>...</h2>
    <a class="btn btn-lg btn-success" style="margin:20px 0 0 10px" href="/atm" role="button">Apply for ATM</a>
  </div>
  <%  }else{ %>
  <%  if(account.status === "pending"){ %>
  <div class="no-account">
    <h1>You are ATM card is waiting for approval!..<i class="fas fa-exclamation-circle"></i></h1>
    <h2>Please wait for approval from Manager.. </h2>
    <h3>You will get your card after got approval from manager.. <i class="fas fa-grin-beam"></i></h3>
  </div>
  <% }else if(account.status === "rejected"){ %>
    <div class="no-account">
      <h1>You are ATM is rejected!..<i class="fas fa-exclamation-circle"></i></h1>
      <h2>Please Try to fill the form again!.. with valid details</h2>
    </div>
  <%}else{%>
         <div class="">
           <h1>Hii <%= account.firstName %> <%=account.lastName %></h1>
           <h2>You are ATM card is approved!..</h2>
           <h3>You can get it through the post..<i class="fas fa-grin-beam"></i></h3>
           <a href="/mainfront" class="btn btn-success" role="button">Go to main page</a>
         </div>
  <%    }   %>


  <%}%>

<%- include('partials/footer') %>
