<%- include('partials/header') %>


<form class="" action="/send" method="post">

  <div class="col-md-7 col-lg-8 account-form">
    <h2 class="mb-3" style="margin-top:30px;"> To send money</h2>
    <form class="needs-validation" style="margin-bottom: 200px;" novalidate>
      <div class="row g-3">

        <div class="col-8">
          <label for="username" class="form-label">Enter your Username</label>
          <div class="input-group has-validation">
            <span class="input-group-text">@</span>
            <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
            <div class="invalid-feedback">
              Your username is required.
            </div>
          </div>
        </div>

        <div class="col-sm-6">
          <label for="accountNo" class="form-label">Receiver's Account Number</label>
          <input type="text" class="form-control" name="accountno" id="accountno" placeholder="" value="" required>
          <div class="invalid-feedback">
            Valid receiver's account number is required.
          </div>
        </div>

        <div class="col-sm-6">
          <label for="amount" class="form-label">Enter amount to send</label>
          <input type="number" class="form-control" name="amount" id="amount" placeholder="" value="" required>
          <div class="invalid-feedback">
            amount is required.
          </div>
        </div>

          <button type="submit" class="btn btn-info" style="">Send</button>


      </div>
  </div>

</form>


<%- include('partials/footer') %>
